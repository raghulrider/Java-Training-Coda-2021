<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>happyshopping</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>ActionControl</display-name>
    <servlet-name>ActionControl</servlet-name>
    <servlet-class>control.ActionControl</servlet-class>
    <init-param>
      <description></description>
      <param-name>config</param-name>
      <param-value>/WEB-INF/config.properties</param-value>
    </init-param>
    <init-param>
      <description></description>
      <param-name>dbconfig</param-name>
      <param-value>/WEB-INF/dbconfig.properties</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>ActionControl</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>1</session-timeout>
  </session-config>
  <listener>
    <listener-class>control.SessionListener</listener-class>
  </listener>
  <filter>
    <display-name>SessionCheckFilter</display-name>
    <filter-name>SessionCheckFilter</filter-name>
    <filter-class>control.SessionCheckFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SessionCheckFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
</web-app>